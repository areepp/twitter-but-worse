generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// do I need to create my own user table?
model User {
  id    String @id @unique @default(uuid())
  todos Todo[]
}

model Todo {
  id     String  @id @unique @default(uuid())
  task   String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
